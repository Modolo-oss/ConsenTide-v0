# ==============================================
# CONSENTIDE ENVIRONMENT CONFIGURATION
# REAL BLOCKCHAIN MODE - NO DEMO ALLOWED
# ==============================================

# CRITICAL: Set this to true for REAL BLOCKCHAIN TRANSACTIONS
# Without this, system will try development mode (if exists)
FORCE_REAL_TRANSACTIONS=true

# Environment
NODE_ENV=production

# ==============================================
# BACKEND CONFIGURATION
# ==============================================
PORT=3001
BACKEND_HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Railway PostgreSQL (Production)
DATABASE_URL=postgresql://postgres:[PASSWORD]@[HOST]:[PORT]/railway

# Alternative individual configs (if not using DATABASE_URL)
DB_HOST=containers-us-west-1.railway.app
DB_PORT=5432
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your_railway_password

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:5000

# ==============================================
# CONSTELLATION BLOCKCHAIN (MANDATORY FOR REAL TRANSACTIONS)
# ==============================================
# ‚ö†Ô∏è  CRITICAL: These MUST be set for the system to start in REAL BLOCKCHAIN MODE
# Without these credentials, the system WILL FAIL TO START

# Your Constellation wallet private key (KEEP SECRET)
CONSTELLATION_PRIVATE_KEY=your_real_private_key_here

# Your Constellation wallet public key
CONSTELLATION_PUBLIC_KEY=your_real_public_key_here

# Your Constellation wallet address
CONSTELLATION_WALLET_ADDRESS=your_real_wallet_address_here

# Constellation Network Configuration (Mainnet)
CONSTELLATION_NODE_URL=https://l0-lb-mainnet.constellationnetwork.io
CONSTELLATION_L1_URL=https://l1-lb-mainnet.constellationnetwork.io
CONSTELLATION_NETWORK_ID=1

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

