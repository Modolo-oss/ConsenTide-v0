# ==============================================
# CONSENTIRE ENVIRONMENT CONFIGURATION
# ==============================================

# Environment
NODE_ENV=development

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ==============================================
# BACKEND CONFIGURATION
# ==============================================
PORT=3001
BACKEND_HOST=localhost

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Database (for local development fallback)
DATABASE_URL=postgresql://user:password@localhost:5432/consentire

# Redis (for caching and session storage)
REDIS_URL=redis://localhost:6379

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# CONSTELLATION NETWORK CONFIGURATION
# ==============================================
CONSTELLATION_NODE_URL=https://constellation-node-url
CONSTELLATION_NETWORK_ID=mainnet
CONSTELLATION_WALLET_ADDRESS=your-wallet-address
CONSTELLATION_PRIVATE_KEY=your-private-key-hex
CONSTELLATION_PUBLIC_KEY=your-public-key-hex
CONSTELLATION_API_KEY=your-api-key

# Metagraph Configuration
METAGRAPH_HOST=localhost
METAGRAPH_PORT=9200
METAGRAPH_API_URL=http://localhost:9200

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
ENCRYPTION_KEY=your-32-byte-encryption-key
ENCRYPTION_IV=your-16-byte-iv-key
HASH_SALT=your-random-salt-string

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ==============================================
# ZK PROOF CONFIGURATION
# ==============================================
ZK_CIRCUITS_PATH=./circuits
ZK_PROOF_GENERATION_TIMEOUT=30000
ZK_VERIFICATION_ENABLED=true

# ==============================================
# CERTIFICATE CONFIGURATION
# ==============================================
CERTIFICATE_PATH=./certs/node.p12
CERTIFICATE_PASSWORD=your-certificate-password
CERTIFICATE_ALIAS=node1
TLS_ENABLED=true

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_DEBUG_LOGS=false

# ==============================================
# EXTERNAL INTEGRATIONS
# ==============================================
# Webhook URLs for notifications
WEBHOOK_SUCCESS_URL=https://your-webhook.success
WEBHOOK_FAILURE_URL=https://your-webhook.failure

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Enable mock services for development
USE_MOCK_SERVICES=false
MOCK_CONSTELLATION=false
MOCK_ZK_PROOFS=false

# Database seeding
SEED_DATABASE=false
SEED_USERS_COUNT=10

# ==============================================
# PRODUCTION CONFIGURATION
# ==============================================
# Railway/Cloud Deployment
RAILWAY_STATIC_URL=https://your-app.railway.app
DEPLOYMENT_ENVIRONMENT=production

# SSL Configuration
SSL_CERT_PATH=./certs/ssl.crt
SSL_KEY_PATH=./certs/ssl.key

# CDN Configuration
CDN_URL=https://your-cdn-url

# ==============================================
# BACKUP & STORAGE
# ==============================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_STORAGE_PATH=./backups

# File Storage
UPLOAD_MAX_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,txt,json

# ==============================================
# COMPLIANCE & AUDIT
# ==============================================
AUDIT_LOG_RETENTION_DAYS=2557  # 7 years for GDPR
COMPLIANCE_REPORT_PATH=./reports
DATA_RETENTION_POLICY=enabled
